<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#fff"
    tools:context="com.example.dhiraj.mcproject.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rec"
        android:drawableLeft="@drawable/record"
        android:id="@+id/startBtn"
        android:enabled="true"
        android:layout_alignParentTop="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:drawableLeft="@drawable/stop"
        android:id="@+id/stopBtn"
        android:enabled="false"
        android:layout_above="@+id/textFromSpeech"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hook"
        android:id="@+id/hookBtn"
        android:drawableLeft="@drawable/hook"
        android:enabled="false"
        android:layout_alignBottom="@+id/startBtn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textFromSpeech"
        android:layout_below="@+id/startBtn"
        android:layout_marginTop="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    ProgressBar
        android:id="@+id/progressbar_level"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="1728dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.13"
        android:max="32676"        android:indeterminate="false"
        android:layout_above="@+id/startBtn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <LinearLayout
        android:id="@+id/lay"
        android:layout_width="350dp"
        android:layout_height="350dp"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/startBtn"
        android:background="@android:color/background_light"
        android:layout_alignParentBottom="true">


    </LinearLayout>


</RelativeLayout>
